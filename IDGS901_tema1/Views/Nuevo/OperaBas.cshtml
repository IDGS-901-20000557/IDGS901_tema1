
@{
    ViewBag.Title = "OperaBas";
}

<h2>OperaBas</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form action="/" method="post">
                <label>Numero 1:</label>
                <input type="number" name="n1" value="" />
                <br />
                <label>Numero 2:</label>
                <input type="number" name="n2" value="" />
                <br />
                <label>Multiplicar:</label>
                <input type="radio" name="bandera" value="1" checked/>
                <br />
                <label>Dividir:</label>
                <input type="radio" name="bandera" value="2" />
                <br />
                <label>Sumar:</label>
                <input type="radio" name="bandera" value="3" />
                <br />
                <label>Restar:</label>
                <input type="radio" name="bandera" value="4" />
                <br />
                <input type="submit" name="name" value="Calcular" />

            </form>
        </div>
        <div class="col-lg-6">
            <h1>El resultado es: @ViewBag.Res</h1>
        </div>
    </div>
</div>