@model IDGS901_tema1.Models.traductor

@{
    ViewBag.Title = "Registrar";
}

<h2>Registrar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>traductor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ingles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ingles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ingles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>español</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.espanniol, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.espanniol, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="visibility: hidden;">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.eleccion, new { htmlAttributes = new { @class = "form-control", id = "eleccion" } })
                </div>
            </div>
        </div>

        <input type="hidden" name="bandera" value="" id="bandera" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" onclick="document.getElementById('eleccion').value='1';"/>
                <input type="submit" value="Mostrar" class="btn btn-default" onclick="document.getElementById('eleccion').value='2';" />
            </div>
        </div>
    </div>

}
@if (ViewBag.Archivos != null)
{
    <table>
        <tr>
            <th>
                Español
              
            </th>
            <th>
                Ingles
            </th>
        </tr>
        @foreach (string item in ViewBag.Archivos)
        {
            <tr>

                @foreach (var palabra in item.Split(','))
                {
                    <td>@palabra</td>
                    
                }

               
            </tr>
        }
        </table>

}


        <div>
            @Html.ActionLink("Back to List", "Traductor")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
